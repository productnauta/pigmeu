{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["article_title", "analysis_summary", "proposals", "metadata"],
  "additionalProperties": false,
  "properties": {
    "article_title": { "type": "string", "minLength": 1 },
    "analysis_summary": {
      "type": "object",
      "required": [
        "main_themes",
        "primary_keywords",
        "analyzed_structures",
        "recurring_titles",
        "recurring_subtitles"
      ],
      "additionalProperties": false,
      "properties": {
        "main_themes": { "type": "array", "items": { "type": "string" } },
        "primary_keywords": { "type": "array", "items": { "type": "string" } },
        "analyzed_structures": { "type": "integer", "minimum": 0 },
        "recurring_titles": { "type": "array", "items": { "type": "string" } },
        "recurring_subtitles": { "type": "array", "items": { "type": "string" } }
      }
    },
    "proposals": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "description",
          "structure",
          "total_h2",
          "total_h3",
          "features"
        ],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "integer", "minimum": 0 },
          "name": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "structure": {
            "type": "array",
            "minItems": 5,
            "maxItems": 9,
            "items": {
              "type": "object",
              "required": ["h2", "h3"],
              "additionalProperties": false,
              "properties": {
                "h2": { "type": "string", "minLength": 1 },
                "h3": {
                  "type": "array",
                  "items": { "type": "string", "minLength": 1 }
                }
              }
            }
          },
          "total_h2": { "type": "integer", "minimum": 5, "maximum": 9 },
          "total_h3": { "type": "integer", "minimum": 7, "maximum": 13 },
          "features": {
            "type": "object",
            "required": ["seo_optimization", "geo_optimization", "data_source", "new_elements"],
            "additionalProperties": false,
            "properties": {
              "seo_optimization": { "type": "string" },
              "geo_optimization": { "type": "string" },
              "data_source": { "type": "string" },
              "new_elements": { "type": "integer", "minimum": 0 }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": [
        "generation_date",
        "schema_version",
        "total_titles_analyzed",
        "total_subtitles_analyzed"
      ],
      "additionalProperties": false,
      "properties": {
        "generation_date": { "type": "string", "minLength": 1 },
        "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+$" },
        "total_titles_analyzed": { "type": "integer", "minimum": 0 },
        "total_subtitles_analyzed": { "type": "integer", "minimum": 0 }
      }
    }
  }
}
